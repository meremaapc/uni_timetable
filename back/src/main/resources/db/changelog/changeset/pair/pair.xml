<?xml version="1.1" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="create-table-pair" author="merenaas">
        <preConditions>
            <not>
                <tableExists tableName="pair"/>
            </not>
        </preConditions>
        <createTable tableName="pair">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="teacher_id" type="bigint"/>
            <column name="uni_group_id" type="bigint"/>
            <column name="subject_id" type="bigint"/>
            <column name="auditory_id" type="bigint"/>
            <column name="day_of_week_id" type="bigint"/>
            <column name="pair_time_id" type="bigint"/>
            <column name="timetable_id" type="bigint"/>
        </createTable>
    </changeSet>

    <changeSet id="create_sequence_pair" author="merenaas">
        <preConditions>
            <not>
                <sequenceExists sequenceName="pair_id_seq"/>
            </not>
        </preConditions>
        <createSequence sequenceName="pair_id_seq"
                        incrementBy="1"
                        minValue="1"/>
    </changeSet>

    <changeSet id="create_fk_pair_teacher" author="merenaas">
        <addForeignKeyConstraint
            baseTableName="pair"
            baseColumnNames="teacher_id"
            constraintName="fk_pair_teacher"
            referencedTableName="teacher"
            referencedColumnNames="id"/>
    </changeSet>
    <changeSet id="create_fk_pair_uni_group" author="merenaas">
        <addForeignKeyConstraint
                baseTableName="pair"
                baseColumnNames="uni_group_id"
                constraintName="fk_pair_uni_group"
                referencedTableName="uni_group"
                referencedColumnNames="id"/>
    </changeSet>
    <changeSet id="create_fk_pair_subject" author="merenaas">
        <addForeignKeyConstraint
                baseTableName="pair"
                baseColumnNames="subject_id"
                constraintName="fk_pair_subject"
                referencedTableName="subject"
                referencedColumnNames="id"/>
    </changeSet>
    <changeSet id="create_fk_pair_auditory" author="merenaas">
        <addForeignKeyConstraint
                baseTableName="pair"
                baseColumnNames="auditory_id"
                constraintName="fk_pair_auditory"
                referencedTableName="auditory"
                referencedColumnNames="id"/>
    </changeSet>
    <changeSet id="create_fk_pair_day_of_week" author="merenaas">
        <addForeignKeyConstraint
                baseTableName="pair"
                baseColumnNames="day_of_week_id"
                constraintName="fk_pair_day_of_week"
                referencedTableName="day_of_week"
                referencedColumnNames="id"/>
    </changeSet>
    <changeSet id="create_fk_pair_pair_time" author="merenaas">
        <addForeignKeyConstraint
                baseTableName="pair"
                baseColumnNames="pair_time_id"
                constraintName="fk_pair_pair_time"
                referencedTableName="pair_time"
                referencedColumnNames="id"/>
    </changeSet>
    <changeSet id="create_fk_pair_timetable" author="merenaas">
        <addForeignKeyConstraint
                baseTableName="pair"
                baseColumnNames="timetable_id"
                constraintName="fk_pair_timetable"
                referencedTableName="timetable"
                referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>