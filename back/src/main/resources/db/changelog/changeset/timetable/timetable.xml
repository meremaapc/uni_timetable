<?xml version="1.1" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="create-table-timetable" author="merenaas">
        <preConditions>
            <not>
                <tableExists tableName="timetable"/>
            </not>
        </preConditions>
        <createTable tableName="timetable">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="create_date" type="timestamp"/>
            
        </createTable>
    </changeSet>

    <changeSet id="create_sequence_timetable" author="merenaas">
        <preConditions>
            <not>
                <sequenceExists sequenceName="timetable_id_seq"/>
            </not>
        </preConditions>
        <createSequence sequenceName="timetable_id_seq"
                        incrementBy="1"
                        minValue="1"/>
    </changeSet>

</databaseChangeLog>